<script>
document.addEventListener('DOMContentLoaded', () => {
    fetch('resurse/json/galerie.json')
        .then(response => response.json())
        .then(data => {
            const galerie = document.querySelector('.galerie');
            const imagini = data.imagini;
            const currentDate = new Date();
            const currentMinute = currentDate.getMinutes();

            // Determinăm sfertul de oră curent
            let currentQuarter;
            if (currentMinute < 15) {
                currentQuarter = 1;
            } else if (currentMinute < 30) {
                currentQuarter = 2;
            } else if (currentMinute < 45) {
                currentQuarter = 3;
            } else {
                currentQuarter = 4;
            }

            // Filtrăm imaginile pe baza sfertului de oră
            const filteredImagini = imagini.filter(imagine => imagine.sfert_ora == currentQuarter);

            // Indicele pentru spațiile goale: 2x2 (index 4) și 3x2 (index 7) în grila 4x3
            const emptyIndexes = [4, 7];

            // Creăm grila de 4x3
            for (let i = 0; i < 12; i++) {
                const div = document.createElement('div');
                
                if (emptyIndexes.includes(i)) {
                    div.classList.add('empty');
                } else if (i < filteredImagini.length) {
                    const img = document.createElement('img');
                    img.src = `${data.cale_galerie}${filteredImagini[i].cale_imagine}`;
                    img.alt = filteredImagini[i].descriere;
                    div.appendChild(img);
                } else {
                    div.classList.add('empty');
                }

                galerie.appendChild(div);
            }
        })
        .catch(error => console.error('Error loading JSON:', error));
});


