/* Stil pentru linkurile externe */
.external-link {
    position: relative; 
    display: inline-block;
    text-decoration: none; /* Îndepărtează sublinierea implicită */
    color: #CEA8F0; /* Folosește culoarea textului linkului */
    background: radial-gradient(circle, 
                                rgba(236, 106, 222, 0.6) 0%, 
                                rgba(255, 106, 222, 0.6) 40%, 
                                rgba(255, 106, 222, 0.3) 60%, 
                                rgba(255, 0, 0, 0) 80%, 
                                rgba(255, 0, 0, 0) 100%); /* Gradientul radial colorat */
    background-position: center; /* Poziționează fundalul în centru */
    background-size: 0% 0%; /* Dimensiunea inițială a fundalului */
    transition: background-size 2s; /* Tranziție pentru dimensiunea fundalului */
    border-radius: 50%; /* Asigură că fundalul are formă ovală */
}

/* Simbolul care apare înaintea linkului */
.external-link::before {
    content:"⮳"; /* Simbolul care se adaugă înaintea linkului */
    font-size: 150%; /* Font-size cu 50% mai mare decât font-size-ul linkului */
    margin-right: 0.2em; /* Spațiu între simbol și text */
    color: inherit; /* Folosește culoarea textului linkului */
  /*  transition: color 0.3s;  Tranziție pentru schimbarea culorii */
}

/* Schimbarea culorii simbolului și dimensiunea fundalului la hover */
.external-link:hover {
    background-size: 100% 100%; /* Extinde fundalul la dimensiunea completă a elementului */
    color: black;
}
.external-link:active {
    border: 2px solid black; /* Adaugă border când linkul este apăsat */
    background-size: 100% 100%; /* Asigură că fundalul rămâne complet extins la click */
     border-radius: 100%;
}

/* Tranziția imediată a fundalului după hover */
.external-link:not(:hover) {
    transition: background-size 0s; /* Elimină tranziția pentru dimensiunea fundalului după hover */
}



